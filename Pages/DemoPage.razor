@page "/demo"

<h1 class="text-center my-4">Welcome to the Demo Page</h1>
<p class="text-muted text-center">
    Show/Hide a popup based on user click <br />
    Integrate a shared component in that popup
</p>

<div class="text-center mt-3">
    <button class="btn btn-primary" @onclick="ToggleCounter">
        @ToggleButtonText
    </button>
</div>

@if (isToggled)
{
    <div id="popup" class="popup-overlay d-flex align-items-center justify-content-center">
        <div class="popup-content bg-white p-4 shadow rounded">
            <h3 class="text-center text-primary">Counter</h3>
            <Counter />
        </div>
    </div>
}

@code{
    private bool isToggled = false;
    private string ToggleButtonText => isToggled ? "Hide" : "Show";
    private void ToggleCounter()
    {
        isToggled = !isToggled;
    }
}
